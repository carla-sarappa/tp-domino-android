<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ar.edu.unq.uis.domino">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ClienteActivity"
            android:label="Domino Client"
            android:theme="@style/AppTheme.NoActionBar"
            android:taskAffinity="ar.edu.unq.uis.domino.ClienteActivity">
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AdminActivity"
            android:label="Domino Admin"
            android:theme="@style/AppTheme.NoActionBar"
            android:taskAffinity="ar.edu.unq.uis.domino.AdminActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="Settings"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".DetailActivity"
            android:label="Detail"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>